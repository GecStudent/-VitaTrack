NODE_ENV={{ environment }}
PORT=3000

# Database
DB_HOST={{ hostvars[groups['db_proxy_servers'][0]]['ansible_host'] }}
DB_PORT=5432
DB_NAME={{ project_name }}
DB_USER=app_user
DB_PASSWORD={{ db_password }}

# Redis
REDIS_HOST={{ hostvars[groups['db_proxy_servers'][0]]['ansible_host'] }}
REDIS_PORT=6379

# AWS
AWS_REGION={{ aws_region }}
AWS_S3_BUCKET={{ project_name }}-static-assets

# Application
API_URL=https://api.{{ domain_name }}
FRONTEND_URL=https://{{ domain_name }}