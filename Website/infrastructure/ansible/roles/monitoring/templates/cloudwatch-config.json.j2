{
  "agent": {
    "metrics_collection_interval": 60,
    "run_as_user": "root"
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/log/syslog",
            "log_group_name": "/{{ project_name }}/{{ environment }}/syslog",
            "log_stream_name": "{instance_id}",
            "retention_in_days": 14
          },
          {
            "file_path": "/var/log/auth.log",
            "log_group_name": "/{{ project_name }}/{{ environment }}/auth",
            "log_stream_name": "{instance_id}",
            "retention_in_days": 14
          },
          {
            "file_path": "/var/log/docker/containers/*/*.log",
            "log_group_name": "/{{ project_name }}/{{ environment }}/docker",
            "log_stream_name": "{instance_id}/{file_basename}",
            "retention_in_days": 7
          }
        ]
      }
    }
  },
  "metrics": {
    "metrics_collected": {
      "cpu": {
        "resources": ["*"],
        "measurement": [
          {"name": "cpu_usage_idle", "unit": "Percent"},
          {"name": "cpu_usage_user", "unit": "Percent"},
          {"name": "cpu_usage_system", "unit": "Percent"}
        ],
        "totalcpu": true
      },
      "mem": {
        "measurement": [
          {"name": "mem_used_percent", "unit": "Percent"},
          {"name": "mem_available", "unit": "Bytes"},
          {"name": "mem_used", "unit": "Bytes"},
          {"name": "mem_total", "unit": "Bytes"}
        ]
      },
      "disk": {
        "resources": ["/"],
        "measurement": [
          {"name": "disk_used_percent", "unit": "Percent"},
          {"name": "disk_free", "unit": "Bytes"},
          {"name": "disk_used", "unit": "Bytes"},
          {"name": "disk_total", "unit": "Bytes"}
        ]
      },
      "diskio": {
        "resources": ["*"],
        "measurement": [
          {"name": "diskio_io_time", "unit": "Milliseconds"},
          {"name": "diskio_write_bytes", "unit": "Bytes"},
          {"name": "diskio_read_bytes", "unit": "Bytes"},
          {"name": "diskio_writes", "unit": "Count"},
          {"name": "diskio_reads", "unit": "Count"}
        ]
      },
      "swap": {
        "measurement": [
          {"name": "swap_used_percent", "unit": "Percent"},
          {"name": "swap_free", "unit": "Bytes"},
          {"name": "swap_used", "unit": "Bytes"}
        ]
      },
      "netstat": {
        "measurement": [
          {"name": "tcp_established", "unit": "Count"},
          {"name": "tcp_time_wait", "unit": "Count"}
        ]
      },
      "processes": {
        "measurement": [
          {"name": "processes_running", "unit": "Count"},
          {"name": "processes_blocked", "unit": "Count"},
          {"name": "processes_sleeping", "unit": "Count"}
        ]
      }
    },
    "append_dimensions": {
      "InstanceId": "${aws:InstanceId}",
      "InstanceType": "${aws:InstanceType}",
      "AutoScalingGroupName": "${aws:AutoScalingGroupName}"
    },
    "aggregation_dimensions": [["InstanceId"], ["AutoScalingGroupName"]]
  }
}