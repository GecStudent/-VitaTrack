# =========================
# VitaTrack Backend .env
# =========================

# ---- Server ----
PORT=3000            # Port for Express server
NODE_ENV=development # Environment (development, staging, production)

# ---- PostgreSQL Database ----
POSTGRES_URL= # PostgreSQL connection string

# ---- MongoDB Database ----
MONGODB_URI= # MongoDB connection string

# ---- Redis ----
REDIS_URL= # Redis connection string

# ---- JWT/Auth ----
JWT_SECRET=      # Secret key for JWT signing
JWT_EXPIRES_IN=1h                   # Access token expiration (e.g., 1h, 15m)
JWT_REFRESH_EXPIRES_IN=7d           # Refresh token expiration (e.g., 7d)
JWT_ISSUER=vitatrack-api            # JWT issuer
JWT_AUDIENCE=vitatrack-users        # JWT audience

# ---- Security ----
ACCOUNT_LOCKOUT_THRESHOLD=5         # Failed login attempts before lockout
ACCOUNT_LOCKOUT_DURATION=15         # Lockout duration in minutes

# SMTP (Email) configuration
SMTP_HOST=
SMTP_PORT=
SMTP_SECURE=
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=

# Frontend URL for email verification links
FRONTEND_URL=

# ---- Image Recognition Services ----
# AWS Rekognition
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Google Vision API
GOOGLE_VISION_API_KEY=
GOOGLE_APPLICATION_CREDENTIALS=

# Azure Computer Vision
AZURE_COMPUTER_VISION_KEY=
AZURE_COMPUTER_VISION_ENDPOINT=

# Image Recognition Settings
IMAGE_RECOGNITION_CACHE_TTL=3600    # Cache time to live in seconds
IMAGE_RECOGNITION_DEFAULT_SERVICE=aws  # Default service (aws, google, azure, offline)
IMAGE_RECOGNITION_FEEDBACK_DIR=./feedback-data  # Directory to store feedback data

# ---- Data Export Settings ----
EXPORT_FILE_EXPIRY_DAYS=7           # Number of days before export files expire
EXPORT_MAX_DOWNLOADS=3              # Maximum number of downloads per export
EXPORT_ENCRYPTION_KEY=  # Key for encrypting sensitive exports
EXPORT_STORAGE_PATH=./exports       # Path to store export files
EXPORT_DEFAULT_FORMAT=json          # Default export format (json, csv, pdf)
EXPORT_RATE_LIMIT_WINDOW_MS=900000  # Rate limit window in milliseconds (15 minutes)
EXPORT_RATE_LIMIT_MAX=5             # Maximum number of exports per window

# ---- Other (add as needed) ----
# Add other environment variables here as your project grows
