{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "app": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "env": { "type": "string", "enum": ["development", "staging", "production"] },
        "debug": { "type": "boolean" }
      },
      "required": ["name", "env", "debug"]
    },
    "api": {
      "type": "object",
      "properties": {
        "url": { "type": "string", "format": "uri" }
      },
      "required": ["url"]
    },
    "featureFlags": {
      "type": "object",
      "patternProperties": {
        ".*": { "type": "boolean" }
      }
    }
  },
  "required": ["app", "api", "featureFlags"]
} 